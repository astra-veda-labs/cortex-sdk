# MANIFEST.in - Controls what gets included in the distribution package
# This ensures Chat_bot is NOT included when publishing the SDK

# Include essential files
include README.md
include LICENSE
include pyproject.toml

# Include all cortex package files
recursive-include cortex *.py

# Include examples and docs
recursive-include examples *.py *.ipynb *.md
recursive-include docs *.md *.jpg *.png

# Include tests
recursive-include tests *.py

# Explicitly EXCLUDE Chat_bot (test application only)
prune Chat_bot
exclude Chat_bot

# Exclude development files
prune .git
prune .github
exclude .gitignore
exclude .gitattributes

# Exclude build artifacts
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude .DS_Store


